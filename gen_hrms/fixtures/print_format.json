  "html": "<!DOCTYPE html>\n<html lang=\"en\">\n<head>\n    <meta charset=\"UTF-8\">\n    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n    <title>Salary Slip - {{ doc.employee_name }}</title>\n    <style>\n        body {\n            margin: 0;\n            padding: 20px;\n            font-family: Arial, sans-serif;\n            background-color: #f5f5f5;\n            color: #333;\n            font-size: 14px;\n            line-height: 1.4;\n        }\n        \n        .salary-slip-container {\n            max-width: 700px;\n            margin: 0 auto;\n            background: #ffffff;\n            border: 2px solid #333;\n        }\n        \n        .header {\n            background: #ffffff;\n            padding: 20px;\n            text-align: center;\n            border-bottom: 2px solid #333;\n        }\n        \n        .company-logo {\n            max-height: 60px;\n            max-width: 200px;\n            margin-bottom: 10px;\n            display: block;\n            margin-left: auto;\n            margin-right: auto;\n        }\n        \n        .company-name {\n            font-size: 20px;\n            font-weight: bold;\n            color: #1e3a8a;\n            margin: 10px 0 5px 0;\n        }\n        \n        .company-address {\n            color: #1e3a8a;\n            font-size: 14px;\n            margin: 10px 0;\n        }\n        \n        .slip-title {\n            color: #1e3a8a;\n            font-size: 16px;\n            font-weight: bold;\n            margin-top: 15px;\n        }\n        \n        .employee-info {\n            padding: 20px;\n            background: #f8f9fa;\n        }\n        \n        .info-table {\n            width: 100%;\n            border-collapse: collapse;\n        }\n        \n        .info-table td {\n            padding: 8px 0;\n            vertical-align: top;\n        }\n        \n        .info-label {\n            font-weight: bold;\n            color: #1e3a8a;\n            width: 150px;\n            padding-right: 10px;\n        }\n        \n        .info-value {\n            border-bottom: 1px solid #333;\n            padding-bottom: 2px;\n            min-width: 200px;\n        }\n        \n        .date-section {\n            margin-top: 15px;\n        }\n        \n        .date-table {\n            width: 100%;\n            border-collapse: collapse;\n        }\n        \n        .date-table td {\n            padding: 8px 0;\n            width: 50%;\n        }\n        \n        .salary-section {\n            border-top: none;\n        }\n        \n        .salary-table {\n            width: 100%;\n            border-collapse: collapse;\n            border: none;\n        }\n        \n        .salary-table th {\n            background: #e6f3ff;\n            color: #1e3a8a;\n            font-weight: bold;\n            padding: 12px;\n            text-align: center;\n            border: 1px solid #333;\n            font-size: 16px;\n        }\n        \n        .salary-table td {\n            padding: 8px 12px;\n            border: 1px solid #333;\n            text-align: left;\n            vertical-align: top;\n        }\n        \n        .amount-cell {\n            text-align: right;\n            font-weight: 500;\n        }\n        \n        .total-row {\n            font-weight: bold;\n            background: #f0f8ff;\n        }\n        \n        .net-salary-row {\n            font-weight: bold;\n            color: #1e3a8a;\n            font-size: 16px;\n        }\n        \n        .amount-in-words {\n            padding: 20px;\n            background: #f8f9fa;\n            border-top: 1px solid #ddd;\n        }\n        \n        .words-label {\n            font-weight: bold;\n            color: #1e3a8a;\n            font-size: 14px;\n        }\n        \n        .bank-details {\n            padding: 20px;\n            background: #f8f9fa;\n            border-top: 1px solid #ddd;\n        }\n        \n        .bank-table {\n            width: 100%;\n            border-collapse: collapse;\n        }\n        \n        .bank-table td {\n            padding: 8px 0;\n            vertical-align: top;\n        }\n        \n        .bank-label {\n            font-weight: bold;\n            color: #1e3a8a;\n            width: 120px;\n            padding-right: 10px;\n        }\n        \n        .bank-value {\n            border-bottom: 1px solid #333;\n            padding-bottom: 2px;\n            min-width: 150px;\n        }\n        \n        .signature-section {\n            padding: 40px 20px 20px;\n            background: #f8f9fa;\n            border-top: 1px solid #ddd;\n        }\n        \n        .signature-table {\n            width: 100%;\n            border-collapse: collapse;\n        }\n        \n        .signature-table td {\n            width: 50%;\n            text-align: center;\n            padding: 20px 10px;\n            vertical-align: bottom;\n        }\n        \n        .signature-line {\n            border-bottom: 1px solid #333;\n            width: 180px;\n            height: 1px;\n            margin: 0 auto 8px auto;\n        }\n        \n        .signature-title {\n            color: #1e3a8a;\n            font-weight: bold;\n            font-size: 12px;\n        }\n        \n        /* Email-safe styles */\n        * {\n            box-sizing: border-box;\n        }\n        \n        /* Remove flexbox and complex layouts for better email compatibility */\n    </style>\n</head>\n<body>\n    <div class=\"salary-slip-container\">\n        <!-- Header Section -->\n        <div class=\"header\">\n            <img src=\"/files/Gennextlogoxdarkblue.png\" alt=\"Gennext Logo\" class=\"company-logo\">\n            <div class=\"company-name\">Gennext IT Management & Consulting</div>\n            <div class=\"company-address\">Office: Second Floor (C8), Building H-213, Sector 63, Noida (UP)-201305</div>\n            <div class=\"slip-title\">Salary Slip</div>\n        </div>\n        \n        <!-- Employee Information -->\n        <div class=\"employee-info\">\n            <table class=\"info-table\">\n                <tr>\n                    <td class=\"info-label\">Employee Name:</td>\n                    <td class=\"info-value\">{{ doc.employee_name }}</td>\n                </tr>\n                <tr>\n                    <td class=\"info-label\">Designation:</td>\n                    <td class=\"info-value\">{{ doc.designation }}</td>\n                </tr>\n            </table>\n            \n            <div class=\"date-section\">\n                <table class=\"date-table\">\n                    <tr>\n                        <td>\n                            <span class=\"info-label\">Month:</span>\n                            <span class=\"info-value\" style=\"display: inline-block; min-width: 150px;\">{{ frappe.utils.formatdate(doc.start_date, \"MMMM\") }}</span>\n                        </td>\n                        <td>\n                            <span class=\"info-label\">Year:</span>\n                            <span class=\"info-value\" style=\"display: inline-block; min-width: 100px;\">{{ frappe.utils.formatdate(doc.start_date, \"yyyy\") }}</span>\n                        </td>\n                    </tr>\n                </table>\n            </div>\n        </div>\n        \n        <!-- Salary Details Table -->\n        <div class=\"salary-section\">\n            <table class=\"salary-table\">\n                <thead>\n                    <tr>\n                        <th style=\"width: 25%;\">Earnings</th>\n                        <th style=\"width: 25%;\">Amount</th>\n                        <th style=\"width: 25%;\">Deductions</th>\n                        <th style=\"width: 25%;\">Amount</th>\n                    </tr>\n                </thead>\n                <tbody>\n                    <!-- Dynamic rows for earnings and deductions -->\n                    {% set max_rows = [doc.earnings|length, (doc.deductions or [])|length]|max %}\n                    {% for i in range(max_rows) %}\n                    <tr>\n                        <td>\n                            {% if i < doc.earnings|length %}\n                                {{ doc.earnings[i].salary_component }}\n                            {% else %}\n                                &nbsp;\n                            {% endif %}\n                        </td>\n                        <td class=\"amount-cell\">\n                            {% if i < doc.earnings|length %}\n                                {{ \"{:,.2f}\".format(doc.earnings[i].amount) }}\n                            {% else %}\n                                &nbsp;\n                            {% endif %}\n                        </td>\n                        <td>\n                            {% if doc.deductions and i < doc.deductions|length %}\n                                {{ doc.deductions[i].salary_component }}\n                            {% elif i == 0 and not doc.deductions %}\n                                Provident Fund\n                            {% elif i == 1 and not doc.deductions %}\n                                E.S.I.\n                            {% elif i == 2 and not doc.deductions %}\n                                Loan\n                            {% elif i == 3 and not doc.deductions %}\n                                Professional Tax\n                            {% elif i == 4 and not doc.deductions %}\n                                TSD/IT\n                            {% else %}\n                                &nbsp;\n                            {% endif %}\n                        </td>\n                        <td class=\"amount-cell\">\n                            {% if doc.deductions and i < doc.deductions|length %}\n                                {{ \"{:,.2f}\".format(doc.deductions[i].amount) }}\n                            {% elif i < 5 and not doc.deductions %}\n                                -\n                            {% else %}\n                                &nbsp;\n                            {% endif %}\n                        </td>\n                    </tr>\n                    {% endfor %}\n                    \n                    <!-- Additional empty rows for consistent layout -->\n                    <tr>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                    </tr>\n                    <tr>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                    </tr>\n                    \n                    <!-- Total rows -->\n                    <tr class=\"total-row\">\n                        <td><strong>Total Addition</strong></td>\n                        <td class=\"amount-cell\"><strong>{{ \"{:,.2f}\".format(doc.gross_pay) }}</strong></td>\n                        <td><strong>Total Deduction</strong></td>\n                        <td class=\"amount-cell\"><strong>{{ \"{:,.2f}\".format(doc.total_deduction or 0) }}</strong></td>\n                    </tr>\n                    <tr>\n                        <td>&nbsp;</td>\n                        <td>&nbsp;</td>\n                        <td class=\"net-salary-row\"><strong>NET Salary</strong></td>\n                        <td class=\"amount-cell net-salary-row\"><strong>{{ \"{:,.2f}\".format(doc.net_pay) }}</strong></td>\n                    </tr>\n                </tbody>\n            </table>\n        </div>\n        \n        <!-- Amount in Words -->\n        <div class=\"amount-in-words\">\n            <div class=\"words-label\">{{ frappe.utils.money_in_words(doc.net_pay, \"INR\") }}</div>\n        </div>\n        \n        <!-- Bank Details -->\n        <div class=\"bank-details\">\n            <table class=\"bank-table\">\n                <tr>\n                    <td>\n                        <span class=\"bank-label\">Cheque No:</span>\n                        <span class=\"bank-value\">{{ doc.cheque_no or '' }}</span>\n                    </td>\n                    <td>\n                        <span class=\"bank-label\">Name of Bank:</span>\n                        <span class=\"bank-value\">{{ doc.bank_name or '' }}</span>\n                    </td>\n                </tr>\n                <tr>\n                    <td>\n                        <span class=\"bank-label\">Date:</span>\n                        <span class=\"bank-value\">{{ frappe.utils.formatdate(frappe.utils.nowdate(), \"dd/MM/yyyy\") }}</span>\n                    </td>\n                    <td>&nbsp;</td>\n                </tr>\n            </table>\n        </div>\n        \n        <!-- Signature Section -->\n        <div class=\"signature-section\">\n            <table class=\"signature-table\">\n                <tr>\n                    <td>\n                        <div class=\"signature-line\"></div>\n                        <div class=\"signature-title\">Signature of the Employee</div>\n                    </td>\n                    <td>\n                        <div class=\"signature-line\"></div>\n                        <div class=\"signature-title\">Director</div>\n                    </td>\n                </tr>\n            </table>\n        </div>\n    </div>\n</body>\n</html>",
